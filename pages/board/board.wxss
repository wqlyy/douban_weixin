.slide-image {
	width: 100%;
	height: 100%;
}

.title {
	padding-top: 30rpx;
}

.title text{
	display: block;
	width: 100%;
	padding-top: 20rpx;
	text-align: center;
}

.title_header {
	font-size: 50rpx;
	font-weight: bold;
}

.title_txt {
	font-size: 30rpx;
}

.list {
	width: 92%;
	padding: 0 4%;
}

.list_item {
	display: flex;
	margin-top: 40rpx; 
	padding: 30rpx 20rpx;
	background-color: #f5f5f5;
	border-radius: 4px;
	cursor: pointer;
}

.list_item text {
	flex: 1;
}

.list_item image {
	width: 40rpx;
	height: 40rpx;
}